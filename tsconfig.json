{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES6",
    "plugins": [
      {
        "organize imports": "prettier-plugin-organize-imports"
      },
      {
        "name": "next"
      }
    ],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./app/components/*"],
      "@/actions/*": ["./app/actions/*"],
      "@/api/*": ["./app/api/*"],
      "@/utils/*": ["./app/utils/*"],
      "@/types/*": ["./types/*"],
      "@/models/*": ["./models/*"],
      "@/helpers/*": ["./app/helpers/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/config/*": ["./config/*"],
      "@/lib/*": ["./lib/*"],
      "@/admin/*": ["./app/admin/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "auth.js",
    "auth.tjs",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
